%h1= @movie.title
.jumbotron
  -# = @movie.description
  %p= "Plot: #{@movie_data.plot}"  
  %p= "Rating: #{@movie_data.rating}"
  %img.img-rounded{src: "#{@movie_data.poster}"}
- if user_signed_in?
  %p= link_to 'Email me details about this movie', send_info_movie_path(@movie), class: 'btn btn-sm btn-default'
